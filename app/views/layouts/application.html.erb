<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <meta charset="utf-8">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= render 'components/shim' %>
  </head>

  <body>
    <%= render 'components/header' %>
    <div class="container main">
      <%= yield %>
      <%= render 'components/footer' %>
    </div>
  </body>
</html>
